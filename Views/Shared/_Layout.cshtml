<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECommerceBoutique</title>
    <!-- Correction des chemins des fichiers CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerceBoutique.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop me-2"></i>ECommerceBoutique
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <!-- Correction de la double balise ouvrante <<a -->
                            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Products" ? "active" : "")" asp-area="" asp-controller="Products" asp-action="Index">Produits</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Vendor") || User.IsInRole("Administrator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Gestion
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-controller="Products" asp-action="Create">Ajouter un produit</a></li>
                                        <li><a class="dropdown-item" asp-controller="Products" asp-action="ImportFromApi">Importer des produits</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Invoice" asp-action="Index">Mes ventes</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-light position-relative me-3">
                            <i class="bi bi-cart"></i>
                            @await Component.InvokeAsync("CartSummary")
                        </a>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <div class="dropdown">
                                <button class="btn btn-outline-light dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i> Mon compte
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Profil</a></li>
                                    <li><a class="dropdown-item" asp-controller="Invoice" asp-action="Index">Mes commandes</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Déconnexion</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light me-2">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Connexion
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-light">
                                <i class="bi bi-person-plus me-1"></i> Inscription
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="footer border-top py-2 bg-light mt-3">
    
    </footer>
    <a id="back-to-top" class="btn btn-primary btn-sm position-fixed rounded-circle" style="bottom: 20px; right: 20px; display: none; z-index: 1100; width: 40px; height: 40px;">
        <i class="bi bi-arrow-up" style="line-height: 26px;"></i>
    </a>

    <!-- Correction des chemins des fichiers JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>